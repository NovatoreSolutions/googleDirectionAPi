<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffe53935"
            android:padding="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingBottom="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:textSize="12.0sp"
                    android:textColor="#ffffffff"
                    android:textColorHint="#80ffffff"
                    android:ellipsize="end"
                    android:id="@+id/startingPoint"
                    android:background="@android:color/transparent"
                    android:paddingRight="40.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Starting Point"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_my_location_white_24dp"
                    android:drawablePadding="5.0dip" />
                <ImageView
                    android:id="@+id/fromClear"
                    android:background="@drawable/ic_clear_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <View
                android:background="#ffffffff"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
            <RelativeLayout
                android:paddingTop="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:textSize="12.0sp"
                    android:textColor="#ffffffff"
                    android:textColorHint="#80ffffff"
                    android:ellipsize="end"
                    android:id="@+id/endingPoint"
                    android:background="@android:color/transparent"
                    android:paddingRight="40.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ending Point"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_place_white_24dp"
                    android:drawablePadding="5.0dip" />
                <ImageView
                    android:id="@+id/toClear"
                    android:background="@drawable/ic_clear_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
